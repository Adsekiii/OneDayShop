@{
	ViewData["Title"] = "Add/Edit Listing";
}

@model dotnetShop.Models.Product


<div>
	<h1>@ViewData["Title"]</h1>

	<form asp-action="AddEditProductListingForm" asp-controller="Shop">
	<label>Id</label>
	<input class="form-control" type="number" placeholder="0" asp-for="Id" />

	<label>Name</label>
	<input class="form-control" type="text" placeholder="Product Name" asp-for="Name" />

	<label>Amount</label>
	<input class="form-control" type="number" asp-for="Amount"/>

	<label>Price</label>
	<input class="form-control" type="number" asp-for="Price" step="0.1"/>

	<button class="btn btn-primary mt-4" type="submit">ok</button>

</form>

</div>